<div id="cp_intro" class="box_content">
  <h4>Introduction:</h4> <input type="checkbox" class="topic-checkbox" value="Intro" />
  <p><%= @critical_process.cp_intro %></p>
</div>

<div id='cp_definition' class="box_content">
  <h4>Definition:</h4> <input type="checkbox" class="topic-checkbox" value="Definition" />
  <p><%= @critical_process.cp_definition %></p>
</div>

<div id='scopes' class="clearfix">

  <h3>Scopes</h3>

<div id='in_scope_container' class="box_content scope_box">
  <h4>In scope:</h4> <input type="checkbox" class="topic-checkbox" value="In-Scope" />
  <p><%= @critical_process.in_scope %></p>
</div>

<div id='out_scope_container' class="box_content scope_box">
  <h4>Out scope:</h4> <input type="checkbox" class="topic-checkbox" value="Out-Scope" />
  <p><%= @critical_process.out_scope %></p>
</div>
</div>


<div id='cbb_definitions' class="process_table">
  <h3>Description of categories and underlying capability building blocks</h3>
  <table border="0">
    <tr>
      <th>Categories</th>
      <th>Capability Building Blocks</th>
      <th>Description</th>
    </tr>
    <% for category in @categories %>
        <tr>
          <td class="cat" rowspan="<%= category.capability_building_blocks.size %>"><%= category.category_title %></td>
          <td class="cbb"><%= category.capability_building_blocks.first.cbb_title %></td>
          <td class="def"><%= category.capability_building_blocks.first.cbb_definition %></td>
        </tr>
        <% (category.capability_building_blocks - [category.capability_building_blocks.first]).each do |cbb| %>
        <tr>
          <td class="cbb"><%= cbb.cbb_title %></td>
          <td class="def"><%= cbb.cbb_definition %></td>
        </tr>
        <% end %>
    <% end %>
  </table>

</div>

<div id='CBB_maturity_show' class="process_table">
  <h3>Summary maturity curve for capability building blocks</h3>
  <table border="0">
    <tr>
      <th>Categories</th>
      <th>CBB's</th>
      <th>Level 1</th>
      <th>Level 2</th>
      <th>Level 3</th>
      <th>Level 4</th>
      <th>Level 5</th>
    </tr>
    <% for category in @categories %>
        <tr>
          <td class="cat" rowspan="<%= category.capability_building_blocks.size %>"><%= category.category_title %></td>
          <td class="cbb"><%= category.capability_building_blocks.first.cbb_title %></td>
          <td><%= category.capability_building_blocks.first.level_1_cbb %></td>
          <td><%= category.capability_building_blocks.first.level_2_cbb %></td>
          <td><%= category.capability_building_blocks.first.level_3_cbb %></td>
          <td><%= category.capability_building_blocks.first.level_4_cbb %></td>
          <td><%= category.capability_building_blocks.first.level_5_cbb %></td>
        </tr>
        <% (category.capability_building_blocks - [category.capability_building_blocks.first]).each do |cbb| %>
        <tr>
          <td class="cbb"><%= cbb.cbb_title %></td>
          <td><%= cbb.level_1_cbb %></td>
          <td><%= cbb.level_2_cbb %></td>
          <td><%= cbb.level_3_cbb %></td>
          <td><%= cbb.level_4_cbb %></td>
          <td><%= cbb.level_5_cbb %></td>
        </tr>
        <% end %>
    <% end %>

  </table>
</div>
<div id='lessons_learned_show' class="process_table">
<h3>Summary of insights and lessons learned</h3>

  <table border="0">
    <tr>
      <th>Question</th>
      <th>Lessons Learned</th>
    </tr>
    <% for lesson in @lessons%>
        <tr>
          <td><input type="checkbox" class="topic-checkbox" value="Lesson: <%= lesson.lesson_title  %>" ><%= lesson.lesson_title%> </td>
          <td><%= lesson.lesson_definition %></td>

        </tr>
    <% end %>
  </table>
</div>

<p>
  <b>Key term's</b>

</p>

    <div id="comments">

      <h3>Comments</h3>

      <!-- display all comments for this cp, in order of date added, with the user that wrote them and .  -->
      <% for comment in @comments %>



          <div class="comment">
            <div class="heading">
              <p class="name"><%= h comment.user.name %></p>
              <p class="date"><%= h comment.updated_at.strftime("%I:%M %z %d-%m-%y") %></p>
            </div>
            <p><%= h comment.comment %></p>
            Topics: <%= h comment.topics %>
          </div>
      <% end %>

    </div>

    <div id="comment_form">

      <!-- here we will have an if statement that will check to see if the user if a reviewer or editor and if so allow to leave a comment, this can be a pop up window that contains the form and calls an ajax call to add the comment.  -->

      <% @comment = Comment.new %>
      <%= form_for(@comment) do |f| %>


          <div class="field">
            <%= f.label :comment %>
            <br/>
            <%= f.text_area :comment, :rows => 20, :cols => 60 %>
          </div>
          <div class="field">
            <%= f.hidden_field :review_id, :value => @critical_process.review.id %>
          </div>
          <div class="field">
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>
          <div class="field">
            <%= f.hidden_field :topics, :id => "comment_topics", :value => '' %>
          </div>
          <div class="actions">
            <%= f.submit :class => "action_button"%>
          </div>
      <% end %>

    </div>

<% if current_user.can_review(@critical_process) || current_user.is_admin%>
<div id='review_form'>

  <!-- have a button that's only visible to admins and editors which depending on the stage of the CP allows them to approve it to the next stage. -->
  <% @review = @critical_process.review %>
  <%= form_for(@review) do |f| %>


      <% if @review.stage == 'approved' %>

          <div class="field">
            <%= f.hidden_field :stage, :value => '3' %>
          </div>
          This CP has been Approved.
          <div class="actions">
            <%= f.submit "Pull back CP to level 3" %>
          </div>
      <% else %>

          <div class="field">
            <%= f.hidden_field :stage, :value => @new_stage %>

          </div>
          <div class="actions">

            <%= f.submit "Approve CP to level #{@new_stage}", :class => "action_button" %>
          </div>
      <% end %>
  <% end %>
</div>
<% end %>

